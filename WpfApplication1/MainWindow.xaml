    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="354*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- The OK/Cancel/etc buttons -->
        <DockPanel
            HorizontalAlignment="Stretch"
            Margin="2,3,0,3"
            Grid.Column="1"
            Grid.Row="1"
            LastChildFill="False"
            VerticalAlignment="Center">
            <DockPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Height" Value="22"/>
                    <Setter Property="Margin" Value="3,0"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Width" Value="75"/>
                </Style>
            </DockPanel.Resources>
            <StackPanel
                DockPanel.Dock="Left"
                Orientation="Horizontal">
                <Button x:Name="btnResetPage"
                    Click="btnResetPage_Click"
                    Content="a4"/>
                <Button x:Name="btnResetAll"
                    Click="btnResetAll_Click"
                    Content="a5"/>
            </StackPanel>
            <StackPanel
                DockPanel.Dock="Right"
                Orientation="Horizontal">
                <Button x:Name="btnOK"
                    Click="btnOK_Click"
                    Content="a0"/>
                <Button x:Name="btnCancel"
                    Click="btnCancel_Click"
                    Content="a1"/>
                <Button x:Name="btnApply"
                    Click="btnApply_Click"
                    Content="a2"/>
            </StackPanel>
        </DockPanel>

        <!-- The category listview -->
        <ListView x:Name="lstCategories"
            ItemsSource="{Binding ElementName=tabbedPanel, Path=IsMouseOver}"
            Margin="0,3,0,0"
            SelectionMode="Single"
            PreviewMouseWheel="lstCategories_PreviewMouseWheel"
            Width="139" SelectionChanged="lstCategories_SelectionChanged">
            <ListBox.Resources>
                <SolidColorBrush 
                    x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                    Color="White"/>
                <SolidColorBrush 
                    x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                    Color="Black"/>
                <SolidColorBrush 
                    x:Key="{x:Static SystemColors.ControlBrushKey}"
                    Color="White"/>
            </ListBox.Resources>
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                   
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Background="#d8ded9"
                        Height="25"
                        Margin="0,1"
                        Cursor="Hand"
                        Width="128">
                        <Image x:Name="imgCategorySelection" 
                            Visibility="Collapsed"/>
                        <TextBlock
                            Margin="10,1"
                            Text="TabBar_Option_Genre"
							HorizontalAlignment="center"
                            VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                    <DataTemplate.Triggers>
                        
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListView>

        <!-- The main TabControl -->
        <TabControl x:Name="tabbedPanel"
            Background="{StaticResource {x:Static SystemColors.ControlLightLightBrushKey}}"
            Grid.Column="1"
            Margin="0,3,3,0"
            Padding="0"
            SelectedItem="{Binding SelectedItem, ElementName=lstCategories}"
            TabStripPlacement="Left" SelectionChanged="tabbedPanel_SelectionChanged">
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Width" Value="0" />
                </Style>
            </TabControl.ItemContainerStyle>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ScrollViewer
                        Content="{Binding}"
                        VerticalScrollBarVisibility="Auto"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
     </Grid>

